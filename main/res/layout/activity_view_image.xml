<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImagePackage.ViewImageActivity">
    <RelativeLayout
        android:id="@+id/navigation_bar_in_ViewImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_in_ViewImage"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/pxabay"
                    android:textColor="#434343"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:text="protobay"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/downLoad_button_ViewImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardView_in_ViewImage"
                android:layout_centerHorizontal="true"
                android:text="Free Download"
                android:backgroundTint="#4BC850"
                android:layout_marginTop="50dp"/>

        <ImageView
            android:id="@+id/imageView_in_ViewImage"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_below="@+id/downLoad_button_ViewImage"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/owl" />
<androidx.cardview.widget.CardView
    android:id="@+id/cardView_in_ViewImage2"
    android:backgroundTint="#2977EC"
    android:layout_width="100dp"
    android:layout_height="30dp"
    android:layout_below="@id/imageView_in_ViewImage"
    android:layout_alignStart="@+id/imageView_in_ViewImage"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/like"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/likes_in_ViewImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1596"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:fontFamily="@font/oswoldre"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cardView_in_ViewImage2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/lorem"
            android:textAlignment="center"
            android:textSize="17dp" />
    </RelativeLayout>

</ScrollView>